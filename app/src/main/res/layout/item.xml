<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_navigation_item"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow android:gravity="right">

            <CheckedTextView
                android:id="@+id/order_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:autoText="false"
                android:checked="true"
                android:paddingLeft="@dimen/padding"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textColor="?attr/colorControlNormal"
                android:textColorHighlight="?attr/colorControlNormal"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                tools:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_item_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_item_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:paddingRight="5dp"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:text="TextView"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:paddingRight="5dp"
                android:text="TextView" />
        </TableRow>

    </TableLayout>

</RelativeLayout>