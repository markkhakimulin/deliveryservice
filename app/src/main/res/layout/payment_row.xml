<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/row_payment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:layoutMode="clipBounds"
        android:weightSum="1">

        <TextView
            android:id="@+id/cheque_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="13"
            android:maxLines="1"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/cheque_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:maxLength="3"
            android:maxLines="1"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/cheque_session"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:gravity="center_vertical"
            android:maxLength="3"
            android:maxLines="1"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/payment_row_type_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="9"
            android:maxLines="1"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/cheque_row_type_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.15"
            android:gravity="center_vertical"
            android:maxLength="8"
            android:maxLines="1"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/payment_row_sum_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.15"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAlignment="textStart" />

    </TableRow>


</RelativeLayout>
